			</exclusions>
		</dependency>
		<dependency>
			<groupId>es.ieci.tecdoc.sigem</groupId>
			<artifactId>sigem_core</artifactId>
			<version>3.0</version>
			<exclusions>
				<exclusion>
					<groupId>es.ieci.tecdoc.fwktd</groupId>
					<artifactId>fwktd-core</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.springframework</groupId>
