<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="sicres_terceros_api_configurationResourceLoaderImpl" name="sicres_terceros_api_configurationResourceLoader"
		class="es.ieci.tecdoc.fwktd.core.spring.configuration.IeciSystemConfigurationResourceLoaderImpl" />

	<bean class="es.ieci.tecdoc.fwktd.core.spring.configuration.IeciBasePlaceholderConfigurer">
		<property name="ignoreUnresolvablePlaceholders" value="true"/>
		<property name="configurationResourceLoader" ref="sicres_terceros_api_configurationResourceLoader"/>
		<property name="locations">
			<list>
				<value>sicres-terceros-api/sicres-terceros-api.properties</value>
			</list>
		</property>
	</bean>

</beans>