<class 
    name="com.ieci.tecdoc.common.invesicres.ScrPfi" 
    table="SCR_PFIS"
>
    <meta attribute="class-description" inherit="false">
       @hibernate.class
        table="SCR_PFIS"
    </meta>

    <id
        name="id"
        type="java.lang.Integer"
        column="ID"
    >
        <meta attribute="field-description">
           @hibernate.id
            generator-class="assigned"
            type="java.lang.Integer"
            column="ID"

        </meta>
        <generator class="assigned" />
    </id>

    <property
        name="nif"
        type="java.lang.String"
        column="NIF"
        length="25"
    >
        <meta attribute="field-description">
           @hibernate.property
            column="NIF"
            length="25"
        </meta>    
    </property>
    <property
        name="firstName"
        type="java.lang.String"
        column="FIRST_NAME"
        not-null="true"
        length="25"
    >
        <meta attribute="field-description">
           @hibernate.property
            column="FIRST_NAME"
            length="25"
            not-null="true"
        </meta>    
    </property>
    <property
        name="secondName"
        type="java.lang.String"
        column="SECOND_NAME"
        length="25"
    >
        <meta attribute="field-description">
           @hibernate.property
            column="SECOND_NAME"
            length="25"
        </meta>    
    </property>
    <property
        name="surname"
        type="java.lang.String"
        column="SURNAME"
        length="20"
    >
        <meta attribute="field-description">
           @hibernate.property
            column="SURNAME"
            length="20"
        </meta>    
    </property>

    <!-- associations -->
    <!-- bi-directional many-to-one association to ScrTypedoc -->
    <many-to-one
        name="scrTypedoc"
        class="com.ieci.tecdoc.common.invesicres.ScrTypedoc"
        not-null="true"
    >
        <meta attribute="field-description">
           @hibernate.many-to-one
            not-null="true"
           @hibernate.column name="TYPE_DOC"         
        </meta>
        <column name="TYPE_DOC" />
    </many-to-one>

</class>
