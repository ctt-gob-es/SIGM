	<build>
		<finalName>SIGEM_AutenticacionBackOfficeWeb</finalName>
		<filters>
			<filter>${filter.generic.system}</filter>
		</filters>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.1.1</version>
				<configuration>
					<warSourceExcludes>${source.exclude}</warSourceExcludes>
					<webXml>
						${basedir}/src/main/webapp/WEB-INF/web.xml
					</webXml>
					<webResources>
						<resource>
							<directory>
								src/main/webapp/WEB-INF
							</directory>
							<targetPath>WEB-INF</targetPath>
							<filtering>true</filtering>
							<excludes>
					          <exclude>**/*.jar</exclude>
					       </excludes>
						</resource>
						<resource>
							<directory>
								src/main/webapp/META-INF
							</directory>
							<targetPath>META-INF</targetPath>
							<filtering>true</filtering>
						</resource>
						 <resource>
					        <directory>src/main/webapp/resources</directory>
					        <filtering>true</filtering>
					        <targetPath>${targetPathStatic}</targetPath>
					        <excludes>
					          <exclude>**/*.css</exclude>
					          <exclude>**/*.js</exclude>
					           <exclude>**/*.png</exclude>
					           <exclude>**/*.jpg</exclude>
					           <exclude>**/*.gif</exclude>
					           <exclude>**/*.pdf</exclude>
					        </excludes>
					      </resource>
					</webResources>

					<archive>
						<manifest>
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
						</manifest>
						<manifestEntries>
							<Implementation-Build>${buildNumber}</Implementation-Build>
							<Weblogic-Application-Version>${project.version}</Weblogic-Application-Version>
						</manifestEntries>
					</archive>
					<packagingExcludes>
					<!-- 	WEB-INF/lib/alfresco-repository*.jar,
						WEB-INF/lib/alfresco-web-service-client*.jar,
						WEB-INF/lib/sigem_clasesBase*.jar,
						resources/**,
						WEB-INF/lib/bc*.jar,
						WEB-INF/lib/activation-1.1.jar,
						WEB-INF/lib/dom4j-1.6.1,
						WEB-INF/lib/icu4j-2.6.1.jar,
						WEB-INF/lib/jaxen-1.1.jar,
						WEB-INF/lib/jdom-1.0.jar,
						WEB-INF/lib/log4j-1.2.13.jar,
						WEB-INF/lib/mail-1.4.jar,
						WEB-INF/lib/oro-2.0.8.jar,
						WEB-INF/lib/slf4j-api-1.5.8.jar,
						WEB-INF/lib/slf4j-log4j12-1.5.6.jar,
						WEB-INF/lib/wss4j-1.5.2.jar,
						WEB-INF/lib/xalan-2.6.0.jar,
						WEB-INF/lib/xercesImpl-2.6.2.jar,
						WEB-INF/lib/xml-apis-1.3.01.jar,
						WEB-INF/lib/xmlParserAPIs-2.6.2.jar,
						WEB-INF/lib/xom-1.0.jar  -->
					</packagingExcludes>
				</configuration>
			</plugin>
		</plugins>
	</build>

