							<execution>
								<id>assembly-common-resources</id>
								<phase>install</phase>
								<goals>
									<goal>single</goal>
								</goals>
								<configuration>
									<finalName>SIGM_autenticacionBO_rweb-${sigm.project.version}</finalName>
									<appendAssemblyId>false</appendAssemblyId>
									<descriptors>
										<descriptor>
											assembly.xml
										</descriptor>
									</descriptors>
								</configuration>
