	<build>
		<finalName>SIGEM_EstructuraWeb</finalName>

		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>	
		<plugins>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.1.1</version>
				<configuration>
					<warSourceExcludes>${source.exclude}</warSourceExcludes>
					<webXml>
						${basedir}/src/main/webapp/WEB-INF/web.xml
					</webXml>
					<webResources>
						<resource>
							<directory>
								src/main/webapp/WEB-INF
							</directory>
							<targetPath>WEB-INF</targetPath>
							<filtering>true</filtering>
						</resource>
						<resource>
					        <directory>src/main/webapp/resources</directory>
					        <filtering>true</filtering>
					        <targetPath>${targetPathStatic}</targetPath>
					        <excludes>
					          <exclude>**/*.css</exclude>
					          <exclude>**/*.js</exclude>
					           <exclude>**/*.png</exclude>
					           <exclude>**/*.jpg</exclude>
					           <exclude>**/*.JPG</exclude>
					           <exclude>**/*.gif</exclude>
					           <exclude>**/*.pdf</exclude>
					        </excludes>
					      </resource>
					      <resource>
					        <directory>src/main/webapp/resources</directory>
					        <filtering>false</filtering>
					        <targetPath>${targetPathStatic}</targetPath>
					        <includes>
					          <include>**/*.css</include>
					          <include>**/*.js</include>
					           <include>**/*.png</include>
					           <include>**/*.jpg</include>
					           <include>**/*.JPG</include>
					           <include>**/*.gif</include>
					           <include>**/*.pdf</include>
					        </includes>
					      </resource>
					</webResources>
				
					<archive>
			            <manifest>
			              <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
			            </manifest>
			            <manifestEntries>
			              <Implementation-Build>${buildNumber}</Implementation-Build>
			              <Weblogic-Application-Version>${sigm.pom.version}</Weblogic-Application-Version>
			            </manifestEntries>
			          </archive>
			          <packagingExcludes>
						WEB-INF/lib/activation*.jar,
						WEB-INF/lib/bcmail-jdk15*.jar,
						WEB-INF/lib/bcprov-jdk15*.jar,
						WEB-INF/lib/commons-lang*.jar,
						WEB-INF/lib/commons-logging*.jar,
						WEB-INF/lib/commons-net*.jar,
						WEB-INF/lib/dom4j*.jar,
						WEB-INF/lib/icu4j*.jar,
						WEB-INF/lib/jaxen*.jar,
						WEB-INF/lib/jcommon*.jar,
						WEB-INF/lib/jdom*.jar,
						WEB-INF/lib/jdtcore*.jar,
						WEB-INF/lib/jfreechart*.jar,
						WEB-INF/lib/jstl*.jar,
						WEB-INF/lib/log4j*.jar,
						WEB-INF/lib/mail*.jar,
						WEB-INF/lib/oro*.jar,
						WEB-INF/lib/saaj-api*.jar,
						WEB-INF/lib/saaj-impl*.jar,
						WEB-INF/lib/serializer*.jar,
						WEB-INF/lib/slf4j-api*.jar,
						WEB-INF/lib/slf4j-log4j12*.jar,
						WEB-INF/lib/standard*.jar,
						WEB-INF/lib/wss4j*.jar,
						WEB-INF/lib/xalan*.jar,
						WEB-INF/lib/xercesImpl*.jar,
						WEB-INF/lib/xml-apis*.jar,
						WEB-INF/lib/xmlParserAPIs*.jar,
						WEB-INF/lib/xom*.jar,
						WEB-INF/lib/alfresco-repository*.jar,
						WEB-INF/lib/alfresco-web-service-client*.jar,
						WEB-INF/lib/sigem_clasesBase*.jar
					</packagingExcludes>
				</configuration>
			</plugin>
		</plugins>
			
	</build>

