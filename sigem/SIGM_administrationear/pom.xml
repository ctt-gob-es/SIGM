<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>SIGEM_RegistroPresencialMSSSI_modules</artifactId>
		<groupId>es.msssi.tecdoc.sigem</groupId>
		<version>3.0.0-msssi2.0.0</version>
		<relativePath>../SIGEM_RegistroPresencialMSSSI_modules/pom.xml</relativePath>
	</parent>

	<groupId>es.msssi.tecdoc.sigem</groupId>
	<artifactId>SIGM_ADMINISTRATION</artifactId>
	<version>3.0.0-msssi2.0.0</version>
	<packaging>ear</packaging>
	<name>SIGM_ADMINISTRATION</name>

	<description>
		Ear para las aplicaciones de administración.
	</description>
	<properties>
		<sigemMSSSI.version>3.0.0-msssi2.0.0</sigemMSSSI.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.version>3.0.0-msssi2.0.0</project.version>
	</properties>

	<dependencies>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.14</version>
		</dependency>
		<dependency>
			<groupId>javax.activation</groupId>
			<artifactId>activation</artifactId>
			<version>1.1</version>
		</dependency>
		<dependency>
			<groupId>org.bouncycastle</groupId>
			<artifactId>bcmail-jdk15</artifactId>
			<version>1.40</version>
		</dependency>
		<dependency>
			<groupId>org.bouncycastle</groupId>
			<artifactId>bcprov-jdk15</artifactId>
			<version>1.40</version>
		</dependency>
		<dependency>
			<groupId>com.ibm.icu</groupId>
			<artifactId>icu4j</artifactId>
			<version>2.6.1</version>
		</dependency>
		<dependency>
			<groupId>jaxen</groupId>
			<artifactId>jaxen</artifactId>
			<version>1.1.1</version>
		</dependency>
		<dependency>
			<groupId>eclipse</groupId>
			<artifactId>jdtcore</artifactId>
			<version>3.1.0</version>
		</dependency>
		<dependency>
			<groupId>jfree</groupId>
			<artifactId>jfreechart</artifactId>
			<version>1.0.12</version>
		</dependency>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>jstl</artifactId>
			<version>1.0.6</version>
		</dependency>
		<dependency>
			<groupId>javax.mail</groupId>
			<artifactId>mail</artifactId>
			<version>1.4.1</version>
		</dependency>
		<dependency>
			<groupId>com.sun.xml.messaging.saaj</groupId>
			<artifactId>saaj-impl</artifactId>
			<version>1.3.2</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.5.8</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
			<version>1.5.6</version>
		</dependency>
		<dependency>
			<groupId>taglibs</groupId>
			<artifactId>standard</artifactId>
			<version>1.0.6</version>
		</dependency>
		<dependency>
			<groupId>org.apache.ws.security</groupId>
			<artifactId>wss4j</artifactId>
			<version>1.5.2</version>
		</dependency>
		<dependency>
			<groupId>xalan</groupId>
			<artifactId>xalan</artifactId>
			<version>2.7.1</version>
		</dependency>
		<dependency>
			<groupId>xml-apis</groupId>
			<artifactId>xml-apis</artifactId>
			<version>1.3.02</version>
		</dependency>
		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<version>1.0.4</version>
		</dependency>
		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
			<version>2.4</version>
		</dependency>
		<dependency>
			<groupId>commons-net</groupId>
			<artifactId>commons-net</artifactId>
			<version>1.1.0</version>
		</dependency>
		<dependency>
			<groupId>oro</groupId>
			<artifactId>oro</artifactId>
			<version>2.0.7</version>
		</dependency>
		<dependency>
			<groupId>es.ieci.tecdoc.sigem</groupId>
			<artifactId>sigem_estructuraOrganizativaWeb</artifactId>
			<type>war</type>
			<version>${sigemMSSSI.version}</version>
		</dependency>
		<dependency>
			<groupId>es.ieci.tecdoc.sigem</groupId>
			<artifactId>sigem_autenticacionAdministracionWeb</artifactId>
			<type>war</type>
			<version>${sigemMSSSI.version}</version>
		</dependency>
		<dependency>
			<groupId>es.ieci.tecdoc.sigem</groupId>
			<artifactId>sigem_registroPresencialAdminWeb</artifactId>
			<type>war</type>
			<version>${sigemMSSSI.version}</version>
		</dependency>
		<dependency>
			<groupId>es.ieci.tecdoc.sigem</groupId>
			<artifactId>sigem_clasesBase</artifactId>
			<version>3.0</version>
			<exclusions>
				<exclusion>
					<groupId>xerces</groupId>
					<artifactId>xercesImpl</artifactId>
				</exclusion>
			</exclusions>
		</dependency>		
	</dependencies>

	<build>
		<finalName>SIGM_ADMINISTRATION</finalName>
		<!-- RESOURCES INCLUIDOS EN EL FILTER -->
		<resources>
			<resource>
				<directory>src/main/application</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<!-- CONSTRUCCION DEL ARCHIVO COMPLIMIDO PARA REPOSITORIO -->
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.4</version>
				<executions>
					<execution>
							<id>assembly-common-resources-static</id>
							<phase>install</phase>
							<goals>
								<goal>single</goal>
							</goals>
							<configuration>
								<finalName>SIGM_SIGM_ADMINISTRATION_rweb-${project.version}</finalName>
								<defaultLibBundleDir>APP-INF/lib</defaultLibBundleDir>
								<archive>
									<manifest>
										<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
									</manifest>
									<manifestEntries>
										<Weblogic-Application-Version>${project.version}</Weblogic-Application-Version>
									</manifestEntries>
								</archive>
								<configuration>
									<filtering>false</filtering>
								</configuration>
								<appendAssemblyId>false</appendAssemblyId>
								<descriptors>
									<descriptor>
										assemblyStatic.xml
									</descriptor>
								</descriptors>
							</configuration>
						</execution>
				</executions>
			</plugin>
			
				<!-- CONSTRUCCION DEL EAR -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<version>2.10</version>
				<configuration>
					<finalName>SIGM_SIGM_ADMINISTRATION-${project.version}</finalName>
					<defaultLibBundleDir>APP-INF/lib</defaultLibBundleDir>
					<archive>
						<manifest>
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
						</manifest>
						<manifestEntries>
							<Weblogic-Application-Version>${project.version}</Weblogic-Application-Version>
						</manifestEntries>
					</archive>
					<earSourceDirectory>src/main/application</earSourceDirectory>
					<filtering>true</filtering>
					<!-- MODULOS -->
					<modules>
						<jarModule>
						   <groupId>log4j</groupId>
						   <artifactId>log4j</artifactId>
			               <bundleDir>APP-INF/lib</bundleDir>
			               <includeInApplicationXml>true</includeInApplicationXml>
			            </jarModule>
			            <jarModule>
						   <groupId>javax.activation</groupId>
						   <artifactId>activation</artifactId>
			               <bundleDir>APP-INF/lib</bundleDir>
			               <includeInApplicationXml>true</includeInApplicationXml>
			            </jarModule>
			            <jarModule>
						   <groupId>org.bouncycastle</groupId>
						   <artifactId>bcmail-jdk15</artifactId>
			               <bundleDir>APP-INF/lib</bundleDir>
			               <includeInApplicationXml>true</includeInApplicationXml>
			            </jarModule>
			            <jarModule>
						   <groupId>org.bouncycastle</groupId>
						   <artifactId>bcprov-jdk15</artifactId>
			               <bundleDir>APP-INF/lib</bundleDir>
			               <includeInApplicationXml>true</includeInApplicationXml>
			            </jarModule>
			            <jarModule>
						   <groupId>com.ibm.icu</groupId>
						   <artifactId>icu4j</artifactId>
			               <bundleDir>APP-INF/lib</bundleDir>
			               <includeInApplicationXml>true</includeInApplicationXml>
			            </jarModule>
			            <jarModule>
						   <groupId>jaxen</groupId>
						   <artifactId>jaxen</artifactId>
			               <bundleDir>APP-INF/lib</bundleDir>
			               <includeInApplicationXml>true</includeInApplicationXml>
			            </jarModule>
			            <jarModule>
						   <groupId>eclipse</groupId>
						   <artifactId>jdtcore</artifactId>
			               <bundleDir>APP-INF/lib</bundleDir>
			               <includeInApplicationXml>true</includeInApplicationXml>
			            </jarModule>
			            <jarModule>
						   <groupId>jfree</groupId>
						   <artifactId>jfreechart</artifactId>
			               <bundleDir>APP-INF/lib</bundleDir>
			               <includeInApplicationXml>true</includeInApplicationXml>
			            </jarModule>
			            <jarModule>
						   <groupId>javax.servlet</groupId>
						   <artifactId>jstl</artifactId>
			               <bundleDir>APP-INF/lib</bundleDir>
			               <includeInApplicationXml>true</includeInApplicationXml>
			            </jarModule>
			            <jarModule>
						   <groupId>javax.mail</groupId>
						   <artifactId>mail</artifactId>
			               <bundleDir>APP-INF/lib</bundleDir>
			               <includeInApplicationXml>true</includeInApplicationXml>
			            </jarModule>
			            <jarModule>
						   <groupId>com.sun.xml.messaging.saaj</groupId>
						   <artifactId>saaj-impl</artifactId>
			               <bundleDir>APP-INF/lib</bundleDir>
			               <includeInApplicationXml>true</includeInApplicationXml>
			            </jarModule>
			            <jarModule>
						   <groupId>org.slf4j</groupId>
						   <artifactId>slf4j-api</artifactId>
			               <bundleDir>APP-INF/lib</bundleDir>
			               <includeInApplicationXml>true</includeInApplicationXml>
			            </jarModule>
			            <jarModule>
						   <groupId>org.slf4j</groupId>
						   <artifactId>slf4j-log4j12</artifactId>
			               <bundleDir>APP-INF/lib</bundleDir>
			               <includeInApplicationXml>true</includeInApplicationXml>
			            </jarModule>
			            <jarModule>
						   <groupId>taglibs</groupId>
						   <artifactId>standard</artifactId>
			               <bundleDir>APP-INF/lib</bundleDir>
			               <includeInApplicationXml>true</includeInApplicationXml>
			            </jarModule>
			            <jarModule>
						   <groupId>org.apache.ws.security</groupId>
						   <artifactId>wss4j</artifactId>
			               <bundleDir>APP-INF/lib</bundleDir>
			               <includeInApplicationXml>true</includeInApplicationXml>
			            </jarModule>
			            <jarModule>
						   <groupId>xalan</groupId>
						   <artifactId>xalan</artifactId>
			               <bundleDir>APP-INF/lib</bundleDir>
			               <includeInApplicationXml>true</includeInApplicationXml>
			            </jarModule>
			            <jarModule>
						   <groupId>xml-apis</groupId>
						   <artifactId>xml-apis</artifactId>
			               <bundleDir>APP-INF/lib</bundleDir>
			               <includeInApplicationXml>true</includeInApplicationXml>
			            </jarModule>
			            <jarModule>
						   <groupId>commons-logging</groupId>
						   <artifactId>commons-logging</artifactId>
			               <bundleDir>APP-INF/lib</bundleDir>
			               <includeInApplicationXml>true</includeInApplicationXml>
			            </jarModule>
			            <jarModule>
						   <groupId>commons-lang</groupId>
						   <artifactId>commons-lang</artifactId>
			               <bundleDir>APP-INF/lib</bundleDir>
			               <includeInApplicationXml>true</includeInApplicationXml>
			            </jarModule>
			            <jarModule>
						   <groupId>commons-net</groupId>
			               <artifactId>commons-net</artifactId>
			               <bundleDir>APP-INF/lib</bundleDir>
			               <includeInApplicationXml>true</includeInApplicationXml>
			            </jarModule>
			            <jarModule>
						   <groupId>oro</groupId>
			               <artifactId>oro</artifactId>
			               <bundleDir>APP-INF/lib</bundleDir>
			               <includeInApplicationXml>true</includeInApplicationXml>
			            </jarModule>
						<jarModule>
							<groupId>es.ieci.tecdoc.sigem</groupId>
							<artifactId>sigem_clasesBase</artifactId>
							<bundleDir>APP-INF/lib</bundleDir>
						   <includeInApplicationXml>true</includeInApplicationXml>
						</jarModule>			            
						<webModule>
							<groupId>es.ieci.tecdoc.sigem</groupId>
							<artifactId>sigem_estructuraOrganizativaWeb</artifactId>
							<contextRoot>/SIGEM_EstructuraWeb</contextRoot>
							<bundleFileName>SIGEM_ESTRUCTURAWEB.war</bundleFileName>
						</webModule>
						<webModule>
							<groupId>es.ieci.tecdoc.sigem</groupId>
							<artifactId>sigem_autenticacionAdministracionWeb</artifactId>
							<contextRoot>/SIGEM_AutenticacionAdministracionWeb</contextRoot>
							<bundleFileName>SIGEM_AUTENTICACIONADMINISTRACIONWEB.war</bundleFileName>
						</webModule>
						<webModule>
							<groupId>es.ieci.tecdoc.sigem</groupId>
							<artifactId>sigem_registroPresencialAdminWeb</artifactId>
							<contextRoot>/SIGEM_RegistroPresencialAdminWeb</contextRoot>
							<bundleFileName>SIGEM_REGISTROPRESENCIALADMINWEB.war</bundleFileName>
						</webModule>
					</modules>
					<generateApplicationXml>true</generateApplicationXml>
				</configuration>
			</plugin>
		</plugins>
		
	</build>
	<profiles>
		<!-- PERFIL LOCAL -->
		<profile>
			<id>msssi_local</id>
			<activation>
				<property>
					<name>msssi_local</name>
				</property>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<wls.cookiesecure>false</wls.cookiesecure>
			</properties>
		</profile>
		<!-- PERFIL DESARROLLO -->
		<profile>
			<id>msssi_desarrollo</id>
			<properties>
				<wls.cookiesecure>false</wls.cookiesecure>
			</properties>
		</profile>
		<!-- PERFIL PREPRODUCCION -->
		<profile>
			<id>msssi_preproduccion</id>
			<properties>
				<wls.cookiesecure>true</wls.cookiesecure>
			</properties>
		</profile>
		<!-- PERFIL PRODUCCION -->
		<profile>
			<id>msssi_produccion</id>
			<properties>
				<wls.cookiesecure>true</wls.cookiesecure>
			</properties>
		</profile>
	</profiles>

</project>